extends basehead

block contenido
    .container
      .row
        // NAVIGATION
        #navigation
          // container
          .container
            #responsive-nav
              // menu nav
              .menu-nav
                span.menu-header
                  | Menu 
                  i.fa.fa-bars
                | 
                ul.menu-list
                  li
                    a(href='/') Incio
                  | 
                  li
                    a(href='#') Metodo de pago/Entregas
                  |             
                  li
                    a(href='#') Quienes somos
                  | 
                  li
                    a(href='#') Contactenos
                  | 
                  li
                    a(href='#')
              // menu nav
          // /container
    // /NAVIGATION

    if products
        .card.card-container
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                ul.list-group
                    - var values = products
                    - if (values.lenght)
                    - values.forEach(function(products){
                        li.list-group-item
                            span.badge Cantidad: #{products.qty} 
                            strong #{products.item.titulo}  &nbsp;&nbsp;&nbsp;
                            strong Talla: #{products.tama}  &nbsp;&nbsp;
                            span.label.label-success Precio: #{products.precio}
                            | &nbsp;&nbsp;&nbsp;&nbsp;
                            .btn-group
                                button.btn.btn-primary.btn-xs.dropdown-toggle(type='button', data-toggle='dropdown')
                                    | Acciones 
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='/reduce/' + products.item._id) Eliminar una camiseta
                                    li
                                        a(href='/remove/' + products.item._id) Eliminar todas las camisetas
                    - });
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                strong Total: #{session.cart.totalPrice}
        hr
        .row
            .col-sm-5.col-md-5.col-md-offset-3.col-sm-offset-3
                a.btn.btn-success.pull-left(href='/checkout', type='button') Checkout
            |
            form(action='https://www.sandbox.paypal.com/cgi-bin/webscr' method='post' target='_top')
                input(type='hidden' name='cmd' value='_xclick')
                input(type='hidden' name='business' value='ptyjs@panamajs.com')
                input(type='hidden' name='lc' value='ES')
                input(type='hidden' name='item_name' value='Compra de camiseta')
                input(type='hidden' name='item_number' value='id_test')
                input(type='hidden' name='amount' value= session.cart.totalPrice)
                input(type='hidden' name='currency_code' value='USD')
                input(type='hidden' name='button_subtype' value='services')
                input(type='hidden' name='no_note' value='1')
                input(type='hidden' name='no_shipping' value='2')
                input(type='hidden' name='shipping' value='5.00')
                input(type='hidden' name='bn' value='PP-BuyNowBF:btn_buynow_LG.gif:NonHosted')
                input(type='image' src='https://www.sandbox.paypal.com/es_ES/ES/i/btn/btn_buynow_LG.gif' border='0' name='submit' alt='PayPal, la forma r√°pida y segura de pagar en Internet.')
                img(alt='' border='0' src='https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif' width='1' height='1')

    else 
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                h2 No tiene productos en el carrito
