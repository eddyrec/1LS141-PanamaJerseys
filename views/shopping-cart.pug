extends basehead

block contenido
    if products
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                ul.list-group
                    - var values = products
                    - if (values.lenght)
                    - values.forEach(function(products){
                        li.list-group-item
                            span.badge #{products.qty} 
                            strong #{products.item.titulo}  &nbsp;&nbsp;&nbsp;   
                            span.label.label-success #{products.precio}
                            | &nbsp;&nbsp;&nbsp;&nbsp;
                            .btn-group
                                button.btn.btn-primary.btn-xs.dropdown-toggle(type='button', data-toggle='dropdown')
                                    | Acciones 
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='/reduce/' + products.item._id) Eliminar una camiseta
                                    li
                                        a(href='/remove/' + products.item._id) Eliminar todas las camisetas
                    - });
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                strong Total: #{session.cart.totalPrice}
        hr
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                a.btn.btn-success(href='/checkout', type='button') Checkout
    else 
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                h2 No tiene productos en el carrito
