    script(src='/js/bootstrap.min.js')
    |     
    script(src='/js/slick.min.js')
    |     
    script(src='/js/nouislider.min.js')
    |     
    script(src='/js/jquery.zoom.min.js')
    |     
    script(src='/js/main.js')




