        .col-lg-12
          .row
            - var produ = productos
            - if (produ.length)
              - produ.forEach(function(producto){
                .col-lg-4.col-md-6.mb-4
                  .card.h-0
                    a(href="/producto/" + producto.id)
                      img.card-img-top(src= producto.imagePath, height="200px" alt="")
                  .card-body
                    h4.card-title
                      a(href="/producto/" + producto.id) #{producto.titulo}
                    h5 $#{producto.precio}
                    p.card-text #{producto.descripcion}  
                  a.btn.btn-success.pull-right(href='/add-to-cart/' + producto.id ,role="button") Comprar
