                        button.cancel-btn
                          i.fa.fa-trash
                    
                    .shopping-cart-btns
                      button.main-btn View Cart
                      
                      button.primary-btn
                        | Checkout 
                        i.fa.fa-arrow-circle-right
              // /Cart
              // Mobile nav toggle
              li.nav-toggle
                button.nav-toggle-btn.main-btn.icon-btn
                  i.fa.fa-bars
              // / Mobile nav toggle
