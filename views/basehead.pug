body
    header
      // header
      #header
        .container
          .pull-left
            // Logo
            .header-logo
              a.logo(href='/')
                img(src='/img/logo-bandera.png', height='70px', alt='')
            // /Logo
            // Search
            .header-search
              form
                input.input.search-input(type='text', placeholder='Palabra clave')
                | 
                select.input.search-categories
                  option(value='0') Categorias
                                   
                  option(value='1') Categoria 2
                | 
                button.search-btn
                  i.fa.fa-search
            // /Search
          
          .pull-right
            ul.header-btns
              // Account
              li.header-account.dropdown.default-dropdown
                if login 
                    .dropdown-toggle(role='button', data-toggle='dropdown', aria-expanded='true')

                      .header-btns-icon
                        i.fa.fa-user-o
                      
                      strong.text-uppercase
                        | Mi Cuenta 
                    a.text-uppercase(href='/adminusr') Mi Cuenta
                    |/
                    a.text-uppercase(href='/logout') Cerrar Sesion
                    ul.custom-menu
                      li
                        a(href='/adminusr')
                          i.fa.fa-user-o
                          |  Mi Cuenta

                      li
                        a(href='#')
                          i.fa.fa-check
                          |  Checkout
                      
                      li
                        a(href='/logout')
                          i.fa.fa-lock-alt
                          |  Cerrar Sesion
                     
                else
                        .dropdown-toggle(role='button', data-toggle='dropdown', aria-expanded='true')
                            .header-btns-icon
                             i.fa.fa-user-o
                          
                            strong.text-uppercase
                              | Mi Cuenta    
                        | 
                        a.text-uppercase(href='/login') Log-In
                        |  / 
                        a.text-uppercase(href='/registro') Crear Cuenta
                        | 
                        ul.custom-menu

                          li
                            a(href='/login')
                              i.fa.fa-unlock-alt
                              |  Iniciar Sesion
                          li
                            a(href='/registro')
                              i.fa.fa-user-plus
                              | Crear Cuenta
              
              // /Account
              // Cart
              li.header-cart.dropdown.default-dropdown
                a.dropdown-toggle(data-toggle='dropdown', aria-expanded='true')
                  .header-btns-icon
                    i.fa.fa-shopping-cart
                    
                    span.qty 1
                  
                  strong.text-uppercase Mi carrito:
                  
                  br
                  
                  span $99.99
                | 
                .custom-menu
                  #shopping-cart
                    .shopping-cart-list
                      .product.product-widget
                        .product-thumb
                          img(src='/img/thumb-product01.jpg', alt='')
                        
                        .product-body
                          h3.product-price
                            | $32.50 
                            span.qty x3
                          
                          h2.product-name
                            a(href='#') Product Name Goes Here
                        
                        button.cancel-btn
                          i.fa.fa-trash
                      
                      .product.product-widget
                        .product-thumb
                          img(src='/img/thumb-product01.jpg', alt='')
                        
                        .product-body
                          h3.product-price
                            | $32.50 
